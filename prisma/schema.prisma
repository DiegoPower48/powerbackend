generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mail{
  id Int @id @default(autoincrement())
  nombre String
  correo String
  comentario String
}

model Block{
  id Int @id @default(autoincrement())
  texto String  @db.Text 
}

model Coin {
  id         Int     @id @default(autoincrement())
  name       String
  symbol     String   @unique
  price      String
  change1h   String
  change24h  String
  change7d   String
}