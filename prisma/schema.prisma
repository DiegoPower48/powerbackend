generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mail{
  id Int @id @default(autoincrement())
  nombre String
  correo String
  comentario String
}

model Block{
  id Int @id @default(autoincrement())
  texto String  @db.Text 
}
model Horario {
  id     Int           @id @default(autoincrement())
  bloques DiaBloque[]
}

model DiaBloque {
  id        Int     @id @default(autoincrement())
  dia       String  // "Lunes", etc.
  hora      String  // ej. "08:00"
  horarioId Int
  horario   Horario @relation(fields: [horarioId], references: [id])
}